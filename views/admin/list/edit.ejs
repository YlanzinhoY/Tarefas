<!DOCTYPE html>
<html lang="pt-br">
<%- include('../../partials/head.ejs') %> 
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/admin/list/index" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">Menu</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="/admin/list/index" class="nav-link align-middle px-0">
                                <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/list/newList" class="nav-link align-middle px-0">
                                <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Criar Tarefa</span>
                            </a>
                          
                        </li>
                    </ul>
                    <div class="text-center">
                        <p>v1.0 <i class="fa fa-github" aria-hidden="true"></i></p>
                        <p>&copy; Todos direitos reservados</p>
                    </div>
                </div>
            </div>
            <div class="col py-3">
                <div class="container">
                   <form action="/list/update" method="post" class="d-flex flex-column gap-3">
                    <h2>Editar post</h2>
                    <hr>
                    <input type="text" class="form-control" placeholder="Defina a Tarefa" name="title" value="<%= list.title %> ">

                    <input type="text" class="form-control" placeholder="Defina o horario" name="horarios" value="<%= list.horarios %> ">

                    <input type="text" class="form-control" placeholder="Defina o horario" name="diaSemana" value="<%= list.diaSemana %> ">

                    <input type="hidden" name="id" value="<%= list.id %> ">

                    <button class="btn btn-primary">Enviar</button>
                    

                   </form>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../partials/foot.ejs') %> 
</body>
</html>